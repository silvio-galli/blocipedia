<% if @user.id == current_user.id %>
  <h1><%= @user.user_name %>'s Profile Page</h1>
  <div class="row">
    <div class="col-md-8">
      <p class="lead">These are your profile settings:</p>
      <ul>
        <li>Email: <%= @user.email %></li>
        <li>Plan: <%= link_to @user.role.capitalize, root_path, title: "Your plan features" %></li>
      </ul>
    </div>
    <div class="col-md-4">
      <%= render partial: 'layouts/right_sidebar' %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6">
      <h2>Your wikis</h2>
      <%= render partial: 'wikis/wikis_table', locals: { wikis: @user.wikis } %>
    </div>
    <div class="col-md-6">
      <h2>Your Collaborations</h2>
      <%= render partial: 'wikis/collaborators_table', locals: { collabos: @user.collaborators } %>
    </div>
  </div>
<% else %>
  <h1>Attention! You're trying to view the profile page of another user.</h1>
  <p><%= link_to "back to your profile", user_path(current_user.id) %></p>
<% end %>
